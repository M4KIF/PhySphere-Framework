{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build",
            "command": "/usr/bin/gcc",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-I${workspaceFolder}/Libraries/GLFW/include/GLFW",
                "-I${workspaceFolder}/Libraries/GLFW/include",
                "-I${workspaceFolder}/Libraries/GLFW/lib-vscode_linux/libglfw.so.3.3",
                "-I${workspaceFolder}/Libraries/GLAD/include",
                "-I${workspaceFolder}/Libraries/THREADPOOL",
                "-I${workspaceFolder}/Libraries/GLM",
                "-I${workspaceFolder}/Libraries/GLM/gtc",
                "-I${workspaceFolder}/Libraries/GLM/gtx",
                "-I${workspaceFolder}/Libraries/GLM/ext",
                "-I${workspaceFolder}/Libraries/GLM/simd",
                "-I${workspaceFolder}/Libraries/SIMPLEX",
                "-I${workspaceFolder}",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/PhysphereEngine.exe",
                //"-framework",
                //"OpenGL",
                //"-framework",
                //"GLAD",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}